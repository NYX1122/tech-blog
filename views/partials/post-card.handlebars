    <div class="row bg-info text-light">
        <p class="col-7 fs-2">{{title}}</p>
        <p class="col-5 fs-4 text-end">Posted by {{user.username}} on {{format_date createdAt}}</p>
    </div>
    <div class="row">
        <p class="col fs-5 mt-3">{{contents}}</p>
    </div>
</article>