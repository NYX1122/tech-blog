<div class="mt-5">
    {{> post-card post}}
</div>

<div class="container mt-3">
    <div class="row">
        <button class="col btn btn-info fs-4">Comment</button>
    </div>
</div>

<article class="container mt-3 border border-info border-5">
    <div class="row bg-info text-light">
        <p class="col fs-4 my-1 text-reset text-decoration-none">Comments</p>
    </div>
    {{#each post.comments as |comment|}}
        {{> post/comment-card comment }}
    {{/each}}
</article>